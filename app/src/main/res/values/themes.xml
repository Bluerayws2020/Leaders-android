<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tasmeme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/action_bar_background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/background_notification_buttons</item>
    </style>
    <style name="CustomCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@drawable/check_box_selector</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
    <style name="CustomCheckBoxStyle2" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@drawable/check_box2_selector</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/dialog_background</item>
    </style>
</resources>