<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/reception_item_background_color"
        app:cardCornerRadius="15dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/evening_trip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="محمد احمد"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/btn_more_options"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_keyboard_arrow_down_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <LinearLayout
                android:id="@+id/spaceHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/evening_trip_name"
                android:orientation="vertical"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/we_left_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="15dp"
                    android:text="لقد غادرنا المدرسة"
                    android:textSize="20sp"
                    android:backgroundTint="@color/admin_recycle_Orange"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/we_are_on_our_way"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="15dp"
                    android:text="نحن في الطريق اليكم"
                    android:textSize="20sp"
                    android:backgroundTint="@color/pink"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/we_are_near_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="15dp"
                    android:text="نحن الان في الموقع"
                    android:textSize="20sp"
                    android:backgroundTint="@color/cyan"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/stu_arrived"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="15dp"
                    android:text="تم وصول الطالب"
                    android:textSize="20sp"
                    android:backgroundTint="@color/admin_recycle_green"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>