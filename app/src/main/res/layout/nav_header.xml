<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/nav_view_header_background">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_nav_drawer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:src="@drawable/leaders"
        />
    <TextView
        android:id="@+id/name_nav_drawerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="سارة سارة"
        android:fontFamily="@font/arabicregular"
        android:textStyle="bold"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image_nav_drawer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/phone_numberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0096212345678"
        android:textSize="10dp"
        android:fontFamily="@font/arabicregular"
        app:layout_constraintTop_toBottomOf="@id/name_nav_drawerTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>