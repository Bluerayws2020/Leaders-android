<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ChildTabFragment">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:id="@+id/child_upload_image"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_file_upload_24"
        />
    <TextView
        android:id="@+id/tv"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="النظام التعليمي"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/child_upload_image"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"

        />
    <CheckBox

        android:layout_marginRight="30dp"
        android:id="@+id/local_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="محلي"
        app:layout_constraintRight_toLeftOf="@id/local_check_box"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintBottom_toBottomOf="@id/local_check_box"


        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintRight_toLeftOf="@id/tv2"
        >
    <CheckBox
        android:id="@+id/global_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دولي"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/global_check_box"
        app:layout_constraintBottom_toBottomOf="@id/global_check_box"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/four_sections_name_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="   الاسم الرباعي "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:padding="15sp"
        />
    <EditText
        android:id="@+id/department_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="   القسم "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/four_sections_name_et"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:padding="15sp"
        />
    <EditText
        android:id="@+id/grade_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="   الصف "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/department_et"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:padding="15sp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_btn"
        android:layout_marginRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/tab_selected_background"
        android:paddingLeft="45dp"
        android:paddingTop="15dp"
        android:paddingRight="45dp"
        android:paddingBottom="15dp"
        android:text="ارسال"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grade_et" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/send_btn"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/send_btn"
        android:padding="1dp">

        <ImageView
            android:id="@+id/add_new_name_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_person_add_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_new_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="اضافة اسم جديد"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/add_new_name_iv"
            app:layout_constraintRight_toLeftOf="@id/add_new_name_iv"
            app:layout_constraintTop_toTopOf="@id/add_new_name_iv" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>