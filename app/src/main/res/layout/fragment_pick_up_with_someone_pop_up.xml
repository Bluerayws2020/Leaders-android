<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.PickUpWithSomeonePopUpFragment"
    android:padding="30dp"

    >
    <EditText
        android:id="@+id/person_name"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:hint="   اسم الشخص "
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:padding="15sp"
        />
    <EditText
        android:id="@+id/phone_number_leave_with_person"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:hint="   رقم هاتف الشخص "
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/person_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15sp"
        />
    <EditText
        android:id="@+id/relative_relation"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:hint="   صلة القرابة "
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/phone_number_leave_with_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:padding="15sp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/leave_send_btn"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ارسال"
        app:layout_constraintTop_toBottomOf="@id/relative_relation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:backgroundTint="@color/admin_recycle_Red"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>