            app:layout_constraintRight_toRightOf="@+id/info5"
            app:layout_constraintLeft_toLeftOf="@id/info5"
            app:layout_constraintTop_toBottomOf="@+id/info5" />
        <TextView
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اختر احد اطفالك"
            android:fontFamily="@font/arabicregular"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/message"
            app:layout_constraintRight_toRightOf="@id/message"
            android:layout_marginTop="20dp"
            android:textColor="#565656"
            />
