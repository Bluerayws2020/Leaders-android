<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ParentInfoTabFragment"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.ParentInfoTabFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:id="@+id/parent_upload_image"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/leaders"
        android:elevation="20dp"
        />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/custom_text_view"
        android:fontFamily="@font/arabicregular"
        android:hint="الاسم الرباعي"
        android:paddingStart="55sp"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parent_upload_image" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/fullName"
        app:layout_constraintBottom_toBottomOf="@id/fullName"
        app:layout_constraintRight_toRightOf="@id/fullName"
        android:layout_marginRight="20dp"
        android:src="@drawable/profile_icon"

        />

    <EditText
        android:id="@+id/national_number_tv"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_text_view"
        android:hint="الرقم الوطني "
        android:fontFamily="@font/arabicregular"
        android:paddingStart="55dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/fullName"
        app:layout_constraintStart_toStartOf="@+id/fullName"
        app:layout_constraintTop_toBottomOf="@id/fullName"

        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/national_number_tv"
        app:layout_constraintBottom_toBottomOf="@id/national_number_tv"
        app:layout_constraintRight_toRightOf="@id/national_number_tv"
        android:layout_marginRight="20dp"
        android:src="@drawable/national_id111"
        />

    <EditText
        android:id="@+id/password_tv"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_text_view"
        android:hint="كلمة المرور "
        android:fontFamily="@font/arabicregular"
        android:inputType="textPassword"
        android:paddingStart="55sp"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/national_number_tv"
        app:layout_constraintStart_toStartOf="@+id/national_number_tv"
        app:layout_constraintTop_toBottomOf="@id/national_number_tv"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/password_tv"
        app:layout_constraintBottom_toBottomOf="@id/password_tv"
        app:layout_constraintRight_toRightOf="@id/password_tv"
        android:layout_marginRight="20dp"
        android:src="@drawable/password111"

        />

    <EditText
        android:id="@+id/email_tv"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_text_view"
        android:fontFamily="@font/arabicregular"
        android:hint="البريد الالكتروني "
        android:paddingStart="55sp"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/password_tv"
        app:layout_constraintStart_toStartOf="@+id/password_tv"
        app:layout_constraintTop_toBottomOf="@id/password_tv" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/email_tv"
        app:layout_constraintBottom_toBottomOf="@id/email_tv"
        app:layout_constraintRight_toRightOf="@id/email_tv"
        android:layout_marginRight="20dp"
        android:src="@drawable/emaill11l"
        />

    <EditText
        android:id="@+id/phone_number_tv"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_text_view"
        android:fontFamily="@font/arabicregular"
        android:hint="رقم الهاتف "
        android:paddingStart="55dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/email_tv"
        app:layout_constraintStart_toStartOf="@+id/email_tv"
        app:layout_constraintTop_toBottomOf="@id/email_tv" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/phone_number_tv"
        app:layout_constraintBottom_toBottomOf="@id/phone_number_tv"
        app:layout_constraintRight_toRightOf="@id/phone_number_tv"
        android:layout_marginRight="20dp"
        android:src="@drawable/phone_numberrr111"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>