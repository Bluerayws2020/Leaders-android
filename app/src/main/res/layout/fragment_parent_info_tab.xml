<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.ParentInfoTabFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:id="@+id/parent_upload_image"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/leaders"
        android:elevation="20dp"
        />
    <EditText
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint=" الاسم الرباعي "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/parent_upload_image"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:padding="15sp"
        android:drawableStart="@drawable/baseline_person_pin_24"
        />
    <EditText
        android:id="@+id/national_number_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="   الرقم الوطني "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/fullName"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:padding="15sp"
        android:drawableStart="@drawable/baseline_numbers_24"
        />
    <EditText
        android:id="@+id/password_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="   كلمة المرور "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/national_number_tv"
        android:textColor="@color/black"
        android:padding="15sp"
        android:drawableStart="@drawable/baseline_lock_24"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/email_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="   البريد الالكتروني "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/password_tv"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:padding="15sp"
        android:drawableStart="@drawable/baseline_email_24"/>
    <EditText
        android:id="@+id/phone_number_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="   رقم الهاتف "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/email_tv"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:padding="15sp"
        android:drawableStart="@drawable/phone"/>




</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>