<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.ParentInfoTabFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:id="@+id/parent_upload_image"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_file_upload_24"
        />
    <EditText
        android:id="@+id/national_number_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="   الرقم الوطني "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/parent_upload_image"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:padding="15sp"
        android:drawableEnd="@drawable/baseline_person2"
        />
    <EditText
        android:id="@+id/password_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="   كلمة المرور "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/national_number_tv"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:padding="15sp"
        android:drawableEnd="@drawable/baseline_person2"/>

    <EditText
        android:id="@+id/email_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="   البريد الالكتروني "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/password_tv"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:padding="15sp"
        android:drawableEnd="@drawable/baseline_person2"/>
    <EditText
        android:id="@+id/phone_number_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="   رقم الهاتف "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/email_tv"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:padding="15sp"
        android:drawableEnd="@drawable/baseline_person2"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ارسال"
        app:layout_constraintTop_toBottomOf="@id/phone_number_tv"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:backgroundTint="@color/tab_selected_background"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>